<%- include('../includes/head.ejs') %>
<link href="/css/style.css" rel="stylesheet">
<link href="/css/custom.css" rel="stylesheet">
</head>
<body>
    <%- include('../includes/subHeader', {user})%>

	<section class="tag container">
		<!-- SEARCH BAR ======================================== -->
		<div class="search-box">
			<div class="container-1">
				<span class="icon"><i class="fa fa-search"></i></span>
				<input type="search" id="search" placeholder="Search..." />
			</div>
		</div>
	</section>
	<!-- CONTENT =============================-->
	<section class="item content container">
		<div class="row justify-content-between">
			<div class="col-md-3">
				<div class="card sidebar-menu mb-4">
					<div class="card-header">
					  <h3 class="h4 card-title">Categories</h3>
					</div>
					<div class="card-body">
					  <ul class="nav nav-pills flex-column category-menu">
						<li>
							<a href="/products" class="nav-link category-filter text-uppercase">
								DAYS
							</a>
							<a href="/products" class="nav-link category-filter text-uppercase">
								MONTHS
							</a>
							<a href="/products" class="nav-link category-filter text-uppercase">
								YEARS
							</a>
						</li>
						<li>
						  	<a href="#" class="nav-link category-filter text-uppercase">
							  <span class="badge badge-secondary">Days</span>
							</a>
						  	<a href="#" class="nav-link category-filter text-uppercase">
							  <span class="badge badge-secondary">Months</span>
							</a>
						  	<a href="#" class="nav-link category-filter text-uppercase">
							  <span class="badge badge-secondary">Years</span>
							</a>
						</li>
					  </ul>
					</div>
				  </div>

			</div>
			<div class="col-md-9 ">
				<div class="toparea">
					<div class="underlined-title">
						<div class="editContent">
							<h1 class="text-center latestitems">REVENUE BY DAYS</h1>
						</div>
						<div class="wow-hr type_short">
							<span class="wow-hr-h">
							<i class="fa fa-star"></i>
							<i class="fa fa-star"></i>
							<i class="fa fa-star"></i>
							</span>
						</div>
					</div>
					<div class="card-box mb-30">
						<table class="data-table table nowrap">
							<thead>
								<tr>
									<th class="table-plus datatable-nosort">Product</th>
									<th>Name</th>
									<th>Color</th>
									<th>Size</th>
									<th>Price</th>
									<th>Oty</th>
									<th class="datatable-nosort">Action</th>
								</tr>
							</thead>
							<tbody>
								
							</tbody>
						</table>
					</div>
				</div>
			</div>

			<div class="col-md-9 ">
				<div class="toparea">
					<div class="underlined-title">
						<div class="editContent">
							<h1 class="text-center latestitems">BEST SELLING PRODUCTS</h1>
						</div>
						<div class="wow-hr type_short">
							<span class="wow-hr-h">
							<i class="fa fa-star"></i>
							<i class="fa fa-star"></i>
							<i class="fa fa-star"></i>
							</span>
						</div>
					</div>
					<div class="card-box mb-30">
						<table class="data-table table nowrap">
							<thead>
								<tr>
									<th class="table-plus datatable-nosort">Product</th>
									<th>Name</th>
									<th>Color</th>
									<th>Size</th>
									<th>Price</th>
									<th>Oty</th>
									<th class="datatable-nosort">Action</th>
								</tr>
							</thead>
							<tbody>
								<% for(let i=0;i<6;i++){ %>
									<%- include('./statisticalRow')%>
								<% } %>
							</tbody>
						</table>
					</div>
				</div>
			</div>

		</div>
	</div>
	
	</section>
	
	<%- include('../includes/foot')%>

	<script src="/js/productFilter.js"></script>
    <script src="/ajax/products-ajax.js"></script>
    <script src="/js/jquery-util.js"></script>
	
</body>
</html>
