<div class="box container">
    <form method="post" action="/products/editProduct" role="form" enctype="multipart/form-data">
        <h1>Edit Product</h1>
        <input id="productId" name="productId" type="hidden" class="form-control" value="<%=product._id?product._id:product.id%>">
        <div class="content py-3">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="productName">Product name</label>
                        <input required id="productName" name="productName" type="text" class="form-control" value="<%=product.name%>">
                    </div>
                </div>
            </div>
            <!-- /.row-->
            <div class="row">
                <div class="col-md-6 col-lg-3">
                    <div class="form-group">
                        <label for="brand">Brand</label>
                        <input required id="brand" name="brand" type="text" class="form-control" value="<%=product.brand%>">
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div class="form-group">
                        <label for="price">Price</label>
                        <input required id="price" name ="price" type="number" class="form-control" value="<%=product.price%>">
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div class="form-group">
                        <label for="color">Color</label>
                        <input required id="color" name="color" type="text" class="form-control" value="<%=product.color%>">
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div class="form-group">
                        <label for="gender">Gender</label>
                        <select id="gender" name='gender' class="form-control" value="<%=product.sex%>">
                            <option value="men">men</option>
                            <option value="women">women</option>
                            <option value="unisex">unisex</option>
                        </select>
                    </div>
                </div>
            </div>
            <!-- /.row-->
            <div class="row">
                <div class="col-md-6 col-lg-3">
                    <div class="form-group">
                        <label for="height">Height</label>
                        <input required id="height" name='height' type="text" class="form-control" value="<%=product.shoesHeight%>">
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div class="form-group">
                        <label for="closure">Closure</label>
                        <input required id="closure" name='closure' type="text" class="form-control" value="<%=product.closureType%>">
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div class="form-group">
                        <label for="material">Material</label>
                        <select id="material" name='material' class="form-control" value="<%=product.material%>">
                            <option value="leather">leather</option>
                            <option value="plastic">plastic</option>
                            <option value="canvas">canvas</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div class="form-group">
                        <label for="category">Category</label>
                        <select id="category" name="category" class="form-control" value="<%=product.category%>">
                            <option value="basketball">basketball</option>
                            <option value="football">football</option>
                            <option value="running">running</option>
                            <option value="casual">casual</option>
                            <option value="skateboard">skateboard</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-6 ">
                    <div class="form-group">
                        <label for="image">Image</label>
                        <input id="image" name="image" type="file" class="form-control">
                    </div>
                </div>
            </div>
            <!-- /.row-->
        </div>
        <div class="form-footer row">
            <div class="col-lg-4 box-footer">
                <button type="submit" class=" btn btn-primary">
                    Save Product &nbsp; <i class="fa fa-chevron-right"></i>
                </button>
            </div>
            <div class="col-lg-6 error"><%=error%></div>
        </div>
    </form>
</div>