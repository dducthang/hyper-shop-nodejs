<div class="box container">
    <form method="post" action="/products/addProduct" role="form" enctype="multipart/form-data">
        <h1>Add Product</h1>
        <div class="content py-3">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="productName">Product name</label>
                        <input id="productName" name="productName" type="text" class="form-control">
                    </div>
                </div>
            </div>
            <!-- /.row-->
            <div class="row">
                <div class="col-md-6 col-lg-3">
                    <div class="form-group">
                        <label for="brand">Brand</label>
                        <input id="brand" name="brand" type="text" class="form-control">
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div class="form-group">
                        <label for="price">Price</label>
                        <input id="price" name ="price" type="number" class="form-control">
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div class="form-group">
                        <label for="color">Color</label>
                        <input id="color" name="color" type="text" class="form-control">
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div class="form-group">
                        <label for="gender">Gender</label>
                        <select id="gender" name='gender' class="form-control">
                            <option value="men">men</option>
                            <option value="unisex">unisex</option>
                            <option value="women">women</option>
                        </select>
                    </div>
                </div>
            </div>
            <!-- /.row-->
            <div class="row">
                <div class="col-md-6 col-lg-3">
                    <div class="form-group">
                        <label for="height">Height</label>
                        <input id="height" name='height' type="text" class="form-control" >
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div class="form-group">
                        <label for="closure">Closure</label>
                        <input id="closure" name='closure' type="text" class="form-control" >
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div class="form-group">
                        <label for="material">Material</label>
                        <select id="material" name='material' class="form-control">
                            <option value="plastic">plastic</option>
                            <option value="canvas">canvas</option>
                            <option value="leather">leather</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div class="form-group">
                        <label for="category">Category</label>
                        <select id="category" name="category" class="form-control">
                            <option value="football">football</option>
                            <option value="running">running</option>
                            <option value="baseketball">baseketball</option>
                            <option value="casual">casual</option>
                            <option value="skateboard">skateboard</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="image">Image</label>
                        <input id="image" name='image' type="file" class="form-control">
                    </div>
                </div>
            </div>
            <!-- /.row-->
                <div class="box-footer-btn">
                    <button type="submit" class="btn btn-primary">
                        Save Product &nbsp; <i class="fa fa-chevron-right"></i>
                    </button>
                </div>
        </div>
    </form>
</div>