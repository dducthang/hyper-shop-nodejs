<div class="box container">
    <form id ="addProductForm" method="post" action="/products/addProduct" role="form" enctype="multipart/form-data">
        <h1>Add Product</h1>
        <div class="content py-3">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="productName">Product Name</label>
                        <input value="<%=product?product.name:''%>" id="productName" required name="productName" type="text" class="form-control">
                    </div>
                </div>
            </div>
            <!-- /.row-->
            <div class="row">
                <div class="col-md-6 col-lg-3">
                    <div class="form-group">
                        <label for="brand">Brand</label>
                        <input value="<%=product?product.brand:''%>" id="brand" required name="brand" type="text" class="form-control">
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div class="form-group">
                        <label for="price">Price</label>
                        <input value="<%=product?product.price:''%>" min="0" id="price" required name ="price" type="number" class="form-control">
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div class="form-group">
                        <label for="color">Color</label>
                        <input value="<%=product?product.color:''%>" id="color" required name="color" type="text" class="form-control">
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div class="form-group">
                        <label for="gender">Gender</label>
                        <select id="gender" required name='gender' class="form-control">
                            <option value="men">men</option>
                            <option value="unisex">unisex</option>
                            <option value="women">women</option>
                        </select>
                    </div>
                </div>
            </div>
            <!-- /.row-->
            <div class="row">
                <div class="col-md-6 col-lg-3">
                    <div class="form-group">
                        <label for="height">Height</label>
                        <input value="<%=product?product.shoesHeight:''%>" id="height" required name='height' type="text" class="form-control" >
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div class="form-group">
                        <label for="closure">Closure</label>
                        <input value="<%=product?product.closureType:''%>" id="closure" required name='closure' type="text" class="form-control" >
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div class="form-group">
                        <label for="material">Material</label>
                        <select id="material" required name='material' class="form-control">
                            <option value="plastic">plastic</option>
                            <option value="canvas">canvas</option>
                            <option value="leather">leather</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div class="form-group">
                        <label for="category">Category</label>
                        <select id="category" required name="category" class="form-control">
                            <option value="football">football</option>
                            <option value="running">running</option>
                            <option value="basketball">basketball</option>
                            <option value="casual">casual</option>
                            <option value="skateboard">skateboard</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="image">Image</label>
                        <input required id="image" name='image' type="file" class="form-control">
                    </div>
                </div>
            </div>
            <!-- /.row-->
            <div class="form-footer row ">
                <div class="col-lg-4 box-footer-btn">
                    <button type="submit" class="btn btn-primary">
                        Save Product &nbsp; <i class="fa fa-chevron-right"></i>
                    </button>
                </div>
                <div class="col-lg-6  error"><%=error%></div>
            </div>
        </div>
    </form>
</div>